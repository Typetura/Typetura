{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "jest": true,
    "mocha": true
  },
  "plugins": ["react", "prettier"],
  "extends": ["standard", "prettier", "plugin:react/recommended"],
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "Event": true,
    "jQuery": true,
    "ResizeObserver": true
  }
}
